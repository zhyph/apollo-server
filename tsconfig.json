{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2022"],
		"rootDir": "src",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
